<%= form_for article do |f| %>
<div class="form-group padding-top-15">
  <%= f.label :title, "タイトル" %>
 <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :body, "本文記入" %>
  <%= f.text_area :body, rows: 13, class: "form-control" %>
</div>
 <%= f.submit "新規作成", class: "btn btn-success" %>
<% end %>
